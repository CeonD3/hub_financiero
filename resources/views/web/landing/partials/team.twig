{% set titulo = [] %}
{% set cargos = [] %}
{% set colaboradores = [] %}
{% set developmentTeam = [] %}

{% for item in equipo %}
    {% if item.content_alias == 'tituloinf' %}
        {% set titulo = titulo|merge([item]) %}
    {% endif %}
    {% if item.content_alias == 'cargo' %}
        {% set cargos = cargos|merge([item]) %}
    {% endif %}
    {% if item.content_alias == 'colaborador' %}
        {% set colaboradores = colaboradores|merge([item]) %}
    {% endif %}
    {% if item.content_alias == 'equipoDesarrollo' %}
        {% set developmentTeam = developmentTeam|merge([item]) %}
    {% endif %}
{% endfor %}
<!--begin::Team Section-->
<div class="bs-landing-section bs-section-1" id="equipo">
