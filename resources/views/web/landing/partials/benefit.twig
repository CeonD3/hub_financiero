{% set titulo = [] %}
{% set kapital = [] %}
{% set valora = [] %}
{% for item in industria %}
	{% if item.content_alias == 'tituloinf' %}
		{% set titulo = titulo|merge([item]) %}
	{% endif %}
	{% if item.content_alias == 'kapital' %}
		{% set kapital = kapital|merge([item]) %}
	{% endif %}
	{% if item.content_alias == 'valora' %}
		{% set valora = valora|merge([item]) %}
	{% endif %}
{% endfor %}
