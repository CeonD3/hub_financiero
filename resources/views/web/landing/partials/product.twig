{% set titulo = [] %}
{% set productos = [] %}

{% for item in servicios %}
    {% if item.content_alias == 'tituloinf' %}
        {% set titulo = titulo|merge([item]) %}
    {% endif %}
    {% if item.content_alias == 'servicios' %}
        {% set productos = productos|merge([item]) %}
    {% endif %}
{% endfor %}
<!--begin::Team Section-->
<div class="bs-landing-section bs-section-1" id="productos">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Heading-->
        <div class="col-lg-12 bs-section-header">
            <!--begin::Title-->
            <div class="bs-section-title">{{titulo[0].content_name}}</div>
            <!--end::Title-->
            <!--begin::Sub-title-->
            <div class="bs-section-text">{{titulo[0].content_caption}}</div>
            <!--end::Sub-title=-->
        </div>
        <!--end::Heading-->
        <!--begin::Slider-->
        <div class="tns tns-default" style="direction: ltr">
            <!--begin::Wrapper-->
            <div data-tns="true" data-tns-loop="true" data-tns-swipe-angle="false" data-tns-speed="2000" data-tns-autoplay="true" data-tns-autoplay-timeout="18000" data-tns-controls="true" data-tns-nav="false" data-tns-items="1" data-tns-center="false" data-tns-dots="false" data-tns-prev-button="#kt_team_slider_prev" data-tns-next-button="#kt_team_slider_next" data-tns-responsive="{1200: {items: 3}, 992: {items: 2}}">
                <div class="card bs-card-2">
                    <div class="card-body ">
                        <div class="bs-card-ribbon">Gratis</div>
                        <div class="bs-card-image">
                            <i class="fa-solid fa-laptop"></i>
                        </div>
                        <div class="bs-card-title">{{productos[0].content_name}}</div>
                        <div class="bs-card-text">
                            {{productos[0].content_caption}}
                        </div>
                    </div>
                    <div class="card-footer border-0">
                        <button type="button" class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_product_modal_1">
                            Ver más <i class="fa-solid fa-chevron-right ms-5"></i>
                        </button>
                    </div>
                </div>
    
                <div class="card bs-card-2">
                    <div class="card-body ">
                        <div class="bs-card-image">
                            <i class="fa-solid fa-laptop"></i>
                        </div>
                        <div class="bs-card-title">Reporte Detallado</div>
                        <div class="bs-card-text">
                            Contiene los resultados del reporte de datos con la metodología. Asi mismo, se incluye 1 hora adicional de consultoría.
                        </div>
                    </div>
                    <div class="card-footer border-0">
                        <button type="button" class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_product_modal_2">
                            Ver más <i class="fa-solid fa-chevron-right ms-5"></i>
                        </button>
                    </div>
                </div>
    
                <div class="card bs-card-2">
                    <div class="card-body ">
                        <div class="bs-card-image">
                            <i class="fa-solid fa-laptop"></i>
                        </div>
                        <div class="bs-card-title">Consultoría Especializada</div>
                        <div class="bs-card-text">
                            Continue los resultados de la estimación del costo de capital de la empresa más el del sector y del mercado desarrollado
                        </div>
                    </div>
                    <div class="card-footer border-0">
                        <button type="button" class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_product_modal_3">
                            Ver más <i class="fa-solid fa-chevron-right ms-5"></i>
                        </button>
                    </div>
                </div>

            </div>
            <!--end::Wrapper-->
            <!--begin::Button-->
            <button class="btn btn-icon btn-active-color-primary" id="kt_team_slider_prev">
                <!--begin::Svg Icon | path: icons/duotune/arrows/arr074.svg-->
                <span class="svg-icon svg-icon-3x">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M11.2657 11.4343L15.45 7.25C15.8642 6.83579 15.8642 6.16421 15.45 5.75C15.0358 5.33579 14.3642 5.33579 13.95 5.75L8.40712 11.2929C8.01659 11.6834 8.01659 12.3166 8.40712 12.7071L13.95 18.25C14.3642 18.6642 15.0358 18.6642 15.45 18.25C15.8642 17.8358 15.8642 17.1642 15.45 16.75L11.2657 12.5657C10.9533 12.2533 10.9533 11.7467 11.2657 11.4343Z" fill="currentColor" />
                    </svg>
                </span>
                <!--end::Svg Icon-->
            </button>
            <!--end::Button-->
            <!--begin::Button-->
            <button class="btn btn-icon btn-active-color-primary" id="kt_team_slider_next">
                <!--begin::Svg Icon | path: icons/duotune/arrows/arr071.svg-->
                <span class="svg-icon svg-icon-3x">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.6343 12.5657L8.45001 16.75C8.0358 17.1642 8.0358 17.8358 8.45001 18.25C8.86423 18.6642 9.5358 18.6642 9.95001 18.25L15.4929 12.7071C15.8834 12.3166 15.8834 11.6834 15.4929 11.2929L9.95001 5.75C9.5358 5.33579 8.86423 5.33579 8.45001 5.75C8.0358 6.16421 8.0358 6.83579 8.45001 7.25L12.6343 11.4343C12.9467 11.7467 12.9467 12.2533 12.6343 12.5657Z" fill="currentColor" />
                    </svg>
                </span>
                <!--end::Svg Icon-->
            </button>
            <!--end::Button-->
        </div>
        <!--end::Slider-->
        <div class="col-lg-12 text-center pt-10">
            <a href="#kt_body" type="button" class="btn btn-primary px-20">Empezar <i class="fa-solid fa-arrow-right ms-2"></i></a>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::Team Section-->

<div class="modal fade" tabindex="-1" id="kt_product_modal_1">
    <div class="modal-dialog modal-md">
        <div class="modal-content bs-modal-1">
            <div class="modal-header">
                <h3 class="modal-title">{{productos[0].content_name}}</h3>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-info ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-regular fa-envelope text-info fs-3"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <p class="bs-modal-text">{{productos[0].content_description|raw}}</p>
                <p><span class="badge badge-light-info fs-4">Free</span></p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="kt_product_modal_2">
    <div class="modal-dialog modal-md">
        <div class="modal-content bs-modal-1">
            <div class="modal-header">
                <h3 class="modal-title">{{productos[1].content_name}}</h3>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-info ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-bolt text-info fs-3"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <p class="bs-modal-text">{{productos[1].content_description|raw}}</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="kt_product_modal_3">
    <div class="modal-dialog modal-md">
        <div class="modal-content bs-modal-1">
            <div class="modal-header">
                <h3 class="modal-title">{{productos[2].content_name}}</h3>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-info ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-sharp fa-solid fa-chart-simple text-info fs-3"></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <p class="bs-modal-text">
                    {{productos[2].content_description|raw}}
                <p>
            </div>
        </div>
    </div>
</div>