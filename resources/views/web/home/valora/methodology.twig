{% extends "web/home/valora/layouts/main.twig" %}

{% block style %}

{% endblock %}

{% block navbar %}
    {% include "web/home/valora/layouts/partials/navbar.twig" with { 'selected': 'methodology' } %}
{% endblock %}


{% block content %}
<!--begin::Container-->
<div class="container-xxl" id="kt_content_container">
    <!--begin::Row-->
    <div class="row gy-5 g-xl-8">
        <div class="col-lg-12">
            <div class="bs-container-title">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="float-start">
                            <h2 class="fs-1">Metodología Valora</h2>
                            <span class="fs-5">Aprende con nosotros paso a paso</span>
                        </diV>
                    </div>
                </div>
            </div>
            <div class="row"> 
                <div class="col-lg-9"> 
                    <div id="containerviewer"></div>
                    {# <iframe width="100%" style="min-height:520px; height: calc(100% - 10px);" src="https://drive.google.com/file/d/1Esm2696i0XB6dAAjhgUUtrI0Z85hWywW/preview" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe> #}
                    {# <img src="http://pago.ccsa.edu.sv/assets/camaleon_cms/image-not-found-26112ee47503d45cff89e808e1d1a5f7.png" width="100%" class="mb-5" style="height: calc(100% - 10px);"> #}
                    {# <iframe width="100%" height="400" src="https://www.youtube.com/embed/6JnGBs88sL0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe> #}
                </div>
                <div class="col-lg-3"> 
                    <div class="card shadow-sm mb-5">
                        <div class="card-header bg-primary">
                            <h3 class="card-title text-white">Aprende más sobre el costo del capital</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="accordion" id="accordionPanelsStayOpenExample">
                                {% for index, item in data.categories %}
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-{{ index }}" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                            {{ item.name }}
                                        </button>
                                    </h2>
                                    <div id="panelsStayOpen-{{ index }}" class="accordion-collapse collapse {{ index == 0 ? 'show' : '' }}" aria-labelledby="panelsStayOpen-headingOne">
                                        <div class="accordion-body py-3">
                                            {% for index2, item2 in item.products %}
                                            <div class="my-4 cursor-pointer btnviewfile" d-url="{{ item2.file }}" d-name="{{ item2.name }}">{{ item2.name }}</div>                                                
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                {% else %}
                                    <div class="p-4">
                                        No hay datos para mostrar
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->

{% endblock %}

{% block script %}
    <script>
        document.getElementById('kt_body').setAttribute('data-kt-aside-minimize','on');
        document.getElementById('kt_aside_toggle').remove();
        document.getElementById('kt_aside_item_projects').remove();
    </script>
{% endblock %}