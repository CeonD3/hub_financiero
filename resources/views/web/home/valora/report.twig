{% extends "web/home/valora/layouts/main.twig" %}

{% block style %}
    <style>

    .splitter-horizontal {
        padding-top: 15px;
        height: 1px;
        background: #000;
    }
    .panel-top {
      height: 580px;
    }
    .icon-splitter {
      text-align: center;
    }
    .fa-splitter{
      color: #fff !important;
      margin-top: -5px;
      position: absolute;
    }
    </style>
{% endblock %}

{% block navbar %}
    {% include "web/home/valora/layouts/partials/navbar.twig" %}
{% endblock %}

  
{% block content %}

<!--begin::Container-->
<div class="container-xxl" id="AppExportKapitalWeb">
    <!--begin::Row-->
    <div class="row gy-5 g-xl-5">
        <div class="col-lg-12"id="app">
            <div class="card shadow-sm rounded-0">
                <div class="panel-top">
                  {# <iframe style="width: 100%; height: 100%;" src="http://localhost:8080/api/kapital/users/0/templates/649c04c1be6cd5joyv/reports/11/show"></iframe> #}
                  <iframe style="width: 100%; height: 100%;" src="{{ data.url }}"></iframe>
                  <div class="icon-splitter"><i class="fa-solid fa-bars fa-splitter"></i></div>
                </div>
                <div class="splitter-horizontal"></div>
            </div>
        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->

{% endblock %}

{% block script %}
    <script>
        document.getElementById('kt_body').setAttribute('data-kt-aside-minimize','on');
        document.getElementById('kt_aside_toggle').remove();
        document.getElementById('kt_aside_item_projects').remove();
    </script>
    {# <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script> #}
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script>
      $(document).ready(function() {
        $(".panel-top").resizable({
            handleSelector: ".splitter-horizontal",
            resizeWidth: false
        });
      });
    </script>
{% endblock %}