<form class="formWACC" id="{{ data.uid }}">
    <div class="card shadow-none mb-5">
        <div class="card-header px-2">
            <div class="card-title">
                <span class="badge bg-primary rounded-pill me-1 fs-3 px-3">1</span>
                <div class="ms-2 me-auto">
                    <div class="fw-bold">
                        Ingrese inputs de la industria
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body px-2 pb-0">
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Fecha</label>
                <div class="col-lg-8">
                    <select class="form-select" data-control="select2" name="date" data-placeholder="SELECCIONE" id="dateFormInput" required>
                        <option></option>
                        {% for item in data.form.dates %}
                        <option value="{{ item }}" {{ data.form.date == item ? 'selected' : '' }}>{{ item }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Industria</label>
                <div class="col-lg-8">
                    <select class="form-select" name="sector" data-control="select2" data-placeholder="SELECCIONE" required>
                        <option></option>
                        {% for item in data.form.sectors %}
                        <option value="{{ item }}" {{ data.form.sector == item ? 'selected' : '' }}>{{ item }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Tasa libre de riesgo</label>
                <div class="col-lg-8">
                    <select class="form-select" name="instrument" data-control="select2" data-placeholder="SELECCIONE"  required>
                        <option></option>
                        {% for item in data.form.instruments %}
                        <option value="{{ item }}" {{ data.form.instrument == item ? 'selected' : '' }}>{{ item }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Año del bono</label>
                <div class="col-lg-8">
                    <select class="form-select" name="bono" data-control="select2" data-placeholder="SELECCIONE" required>
                        <option></option>
                        {% for item in data.form.bonos %}
                        <option value="{{ item }}" {{ data.form.bono == item ? 'selected' : '' }}>{{ item }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="card-header px-2 mt-2">
            <div class="card-title">
                <span class="badge bg-primary rounded-pill me-1 fs-3 px-3">2</span>
                <div class="ms-2 me-auto">
                    <div class="fw-bold">
                        Ingrese inputs del sector
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body px-2 pb-0">
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">País</label>
                <div class="col-lg-8">
                    <select class="form-select" name="country" data-control="select2" data-placeholder="SELECCIONE" id="countryFormInput" required>
                        <option></option>
                        {% for item in data.form.countries %}
                        <option value="{{ item }}" {{ data.form.country == item ? 'selected' : '' }}>{{ item }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Devaluación</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        <input type="text" class="form-control" name="devaluation" value="{{ data.form.devaluation }}" id="devaluationFormInput">
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Tasa impositiva</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        <input type="text" class="form-control" name="tax" value="{{ data.form.tax }}" id="taxFormInput">
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-header px-2 mt-5">
            <div class="card-title">
                <span class="badge bg-primary rounded-pill me-1 fs-3 px-3">3</span>
                <div class="ms-2 me-auto lh-1">
                    <div class="fw-bold">
                        Ingrese inputs de su empresa
                        <label class="float-end ms-2 {{ data.template.type_id == 2 ? '' : 'collapsed' }}" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="{{ data.template.type_id == 2 ? 'true' : 'false' }}" aria-controls="collapseExample" onclick="collapseFaToggle(this, 'collapseFaToggle')" for="typeform">
                            <i class="fa-solid {{ data.template.type_id == 2 ? 'fa-toggle-on' : 'fa-toggle-off' }} fs-2 text-dark" id="collapseFaToggle"></i>
                        </label>
                    </div>
                    <small>En caso no posea estos datos puede eliminarlos</small>
                </div>
                <input class="d-none" type="checkbox" id="typeform" name="typeId" value="2" {{ data.template.type_id == 2 ? 'checked' : '' }}>
            </div>
        </div>
        <div class="card-body px-2 pb-0 collapse {{ data.template.type_id == 2 ? 'show' : '' }}" id="collapseExample">
            <div class="mb-3 row">
                <label class="col-lg-12 col-form-label">Costo de deuda</label>
                <div class="col-lg-12">
                    <div class="input-group">
                        <select class="input-group-text" name="currency" id="" style="width:120px;">
                            {% for item in data.form.currencies %}
                            <option value="{{ item }}" {{ data.form.currency == item ? 'selected' : '' }}>{{ item }}</option>
                            {% endfor %}
                        </select>
                        <input type="text" class="form-control companyInput" name="kd" placeholder="Escriba su Kd" value="{{ data.form.ekd }}" {{ data.template.type_id == 2 ? 'required' : '' }}>
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Porcentaje de deuda</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        <input type="text" class="form-control companyInput" name="debt" placeholder="" value="{{ data.form.epd }}" {{ data.template.type_id == 2 ? 'required' : '' }} id="pdFormInput">
                        <span class="input-group-text" id="basic-addon2">%</span>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-lg-4 col-form-label">Porcentaje de capital</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        <input type="text" class="form-control companyInput" name="capital" placeholder="" value="{{ data.form.epc }}" {{ data.template.type_id == 2 ? 'required' : '' }} id="pcFormInput" readonly>
                        <span class="input-group-text" id="basic-addon2">%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer px-2 pb-0">
            <button type="submit" class="btn btn-primary w-100">CALCULA TU WACC</button>
        </div>
        {# {% if data.uid %}
        <div class="mt-5 text-center">
            <a href="{{ APP.API_URL_FINANCE }}/template/users/{{ data.template.file }}" download>Plantilla Generada</a>
        </div>
        {% endif %} #}
    </div>
</form>
