{% extends "web/home/kapital/layouts/main.twig" %}

{% block style %}

{% endblock %}

{% block navbar %}
    {% include "web/home/kapital/layouts/partials/navbar.twig" with { 'selected': 'analysis' } %}
{% endblock %}

{% block content %}

<!--begin::Container-->
<div class="container-xxl" id="AppAnalysisKapitalWeb" uid="{{ data.uid }}">
    <!--begin::Row-->
    <div class="row gy-5 g-xl-8">
        <div class="col-lg-12">
            <div class="bs-container-title">
                <div class="row">
                    <div class="col-lg-8 mb-2 d-flex">
                        <div>
                            <h1 class="fs-1">Sensibilidad de resultados</h1>
                            <span class="fs-5">Análisis de la tasa de tu empresa</span>
                        </div>
                    </div>
                    <div class="col-lg-4 mb-2">
                        <div v-if="typeId == 2" class="inline-block float-end">
                            <select class="form-select me-2" v-model="currency" @change="onCurrency">
                                <option value="pen" selected>PEN</option>
                                <option value="usd">USD</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 table-loading mt-3" v-show="loading">
            <div class="table-loading-message" v-if="loading">
                Cargando...
            </div>
        </div>
        <div class="m-0" style="display:none;" v-show="!loading">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card shadow-sm mb-5">
                            <div class="card-header">
                                <h3 class="card-title">Empresa/Sector</h3>
                                <div class="card-toolbar">
                                    <button type="submit" class="btn btn-sm btn-primary" form="formSector">Calcular</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <form class="formSector" id="formSector" @submit="onFormSector">
                                    <div class="mb-10">
                                        <label class="required form-label">Relación D/C</label>
                                        <input type="text" class="form-control text-center" :value="dc" placeholder="150" name="dc" required/>
                                    </div>
                                    <div class="mb-10">
                                        <label class="required form-label">Costo de Deuda (Kd)</label>
                                        <div class="input-group">
                                            <select class="input-group-text" name="currency" :value="currency2" id="currencyAnalysisInput" style="width:100px;" :disabled="typeId==1">
                                                {# {% for item in data.form.currencies %}
                                                <option value="{{ item }}" {{ data.form.currency == item ? 'selected' : '' }}>{{ item }}</option>
                                                {% endfor %} #}
                                                <option value="Soles">Soles</option>
                                                <option value="Dólares">Dólares</option>
                                            </select>
                                            <input type="text" class="form-control text-center" :value="kd2" name="kd" required>
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card shadow-sm  mb-5">
                            <div class="card-header">
                                <h3 class="card-title">Empresa/Sector</h3>
                                <div class="card-toolbar">
                                    {# {% if data.uid %}
                                        <a href="{{ APP.API_URL_FINANCE }}/template/users/analisis-{{ data.template.file }}" download>Plantilla Generada</a>
                                    {% endif %} #}
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-2" id="bsGroupCard1" style="height:200px;width:250px;float: right;"></div>
                                    </div>
                                    <div class="col text-center">
                                        <h2 style="font-size: 3rem !important;" v-text="formatterx100p(cppc)" class="mt-3"></h2>
                                        <span style="font-size: 1.2rem !important;" class="lh-1">CPPC</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="card shadow-sm bs-card-a1">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fa-solid fa-file-lines"></i></h3>
                            </div>
                            <div class="card-body" style="min-height: 90px;">
                                <span>Costo Promedio Ponderado de Capital (CPPC)</span>
                            </div>
                            <div class="card-footer">
                                <h2 v-text="formatterx100p(cppc)"></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card shadow-sm bs-card-a1">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fa-solid fa-pencil"></i></h3>
                            </div>
                            <div class="card-body" style="min-height: 90px;">
                                <span>Costo de Deuda Después de Impuestos (Kd*(1-T))</span>
                            </div>
                            <div class="card-footer">
                                <h2 v-text="formatterx100p(kd)"></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card shadow-sm bs-card-a1">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fa-solid fa-chart-column"></i></h3>
                            </div>
                            <div class="card-body" style="min-height: 90px;">
                                <span>Costo de Capital Financiero (Ke)</span>
                            </div>
                            <div class="card-footer">
                                <h2 v-text="formatterx100p(ke)"></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card shadow-sm bs-card-a1">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fa-solid fa-signal"></i></h3>
                            </div>
                            <div class="card-body" style="min-height: 90px;">
                                <span>Costo de Capital Económico (Koa)</span>
                            </div>
                            <div class="card-footer">
                                <h2 v-text="formatterx100p(koa)"></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->

{% endblock %}


{% block script %}
    <script src="/assets/web/js/analysisKapital.js"></script>
    <script>
        document.getElementById('kt_body').setAttribute('data-kt-aside-minimize','on');
        document.getElementById('kt_aside_toggle').remove();
        document.getElementById('kt_aside_item_projects').remove();
    </script>
{% endblock %}