        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">GESTIÓN DE CUENTA CLOUD</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="/admin" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">Sincronizar cuenta</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <!--begin::Primary button-->
                <!--end::Primary button-->
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="AppAccountAdmin" class="app-container container-fluid">
            <div class="row gx-5 gx-xl-10">
                <!--begin::Col-->
                <div class="col-sm-12 col-xl-12">
                    <div class="card">
                        <div class="card-body">
                           
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group w-100 my-4">
                                        <span class="mb-2"><i class="fa fa-chevron-right mr-2" aria-hidden="true"></i> Almacenamiento en su cuenta personal de ONEDRIVE</span>
                                        <div class="mb-2 float-end">
                                            <div class="spinner-border text-primary mr-2" role="status" v-if="loading">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                            <button class="btn btn-primary" v-if="!status" @click="onSignin" v-show="!loading">
                                                Vincular cuenta
                                            </button>
                                            <button class="btn btn-danger" @click="onSignout" v-else v-show="!loading">
                                                Desvincular cuenta
                                            </button>                      
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" v-if="status">
                                <div class="col-md-12">
                                    <ul class="list-group my-4">
                                        <li class="list-group-item">Datos de la cuenta</li>
                                        <li class="list-group-item">Usuario: <b v-text="onedrive?.userPrincipalName"></b></li>
                                        <li class="list-group-item">Nombre: <b v-text="onedrive?.displayName"></b></li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

{% endblock %}

{% block script %}  
<script type="text/javascript">
    const initAccount = () => {
        let self = {};
        return new Vue({
            el: '#AppAccountAdmin',
            data() {
                return {
                    loading: true,
                    status: false,
                    onedrive: {}
                }
            },
            created: function() {
                self = this;
            },
            mounted: function () {
                self.onInitialize();
            },
            watch: {
            },
            computed: {
            },
            methods: {
                onInitialize: function() {
                    self.onOverview();
                },
                onOverview: function () {
                    self.loading = true;
                    helper.post(window.AppFinanceAdmin.api + '/api/admin/onedrive/overview')
                    .then(function ({success, data, message}) {
                        if (!success) {
                            throw message;
                        }
                        self.loading = false;
                        self.status = data.status;
                        self.onedrive = data.account;
                        sweet2.loading(false);
                    })
                    .catch(function (err) {
                        self.loading = false;
                        sweet2.error({html: err});
                    });
                },
                onSignin: function() {
                    self.loading = true;
                    $('<form>', {
                        id: 'frmAzure',
                        html: `<input type="text" name="redirect" value="${ (window.location.protocol + "//" + window.location.host + '/admin/cuentas') }" />`,
                        action: window.AppFinanceAdmin.api + '/api/admin/onedrive/authUrl',
                        // target: '_blank',
                        method: 'post',
                        class:'add-none'
                    }).appendTo(document.body).submit();
                    $('#frmAzure').remove();
                },
                onSignout: function() {
                    sweet2.question({
                        title: '¿Estás seguro de desvincular su cuenta?',
                        onOk: () => {
                            sweet2.loading();
                            helper.post(window.AppFinanceAdmin.api + '/api/admin/onedrive/signout')
                            .then(function ({success, data, message}) {
                                if (!success) {
                                    throw message;
                                }
                                self.onOverview();
                                sweet2.success({text: message});

                            })
                            .catch(function (err) {
                                sweet2.error({html: err});
                            });
                        }
                    });
                }
            }
        });
    }
    document.addEventListener('DOMContentLoaded', initAccount());
</script>
{% endblock %}