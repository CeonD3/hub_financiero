{% extends "admin/layouts/main.twig" %}

{% block styles %}

{% endblock %}

{% block content %}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">GESTIÃ“N DE ARCHIVOS</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="/admin" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">Repositorios</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <!--begin::Primary button-->
                <!--end::Primary button-->
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="AppIndexFileAdmin" class="app-container container-fluid">
            <!--begin::Row-->
            <div class="row gx-5 gx-xl-10">
                <!--begin::Col-->
                <div class="col-sm-12 col-xl-12 mb-7">
                    <!--begin::Row-->
                    <div class="row g-6 g-xl-9 mb-6 mb-xl-9 d-flex justify-content-center">
                        {% for item in data.repositories %}
                        {% if item.id == 1 %}
                        <div class="col-md-6 col-lg-6 col-xl-4">
                            <!--begin::Card-->
                            <div class="card h-100">
                                <!--begin::Card body-->
                                <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                                    <!--begin::Name-->
                                    <a href="/admin/repositorios/{{ item.id }}/detail" class="text-gray-800 text-hover-primary d-flex flex-column">
                                        <!--begin::Image-->
                                        <div class="symbol symbol-150px mb-5">
                                            {% if item.id == 1 %}
                                            <img src="/assets/files/images/zoom-logo.png" class="theme-light-show" alt="" />
                                            <img src="/assets/files/images/zoom-logo.png" class="theme-dark-show" alt="" />
                                            {% elseif item.id == 2 %}                                            
                                            <img src="/assets/files/images/drive-logo.png" class="theme-light-show" alt="" />
                                            <img src="/assets/files/images/drive-logo.png" class="theme-dark-show" alt="" />                                            
                                            {% elseif item.id == 3 %}
                                            <img src="/assets/files/images/onedrive-logo.png" class="theme-light-show" alt="" />
                                            <img src="/assets/files/images/onedrive-logo.png" class="theme-dark-show" alt="" />                                            
                                            {% endif %}
                                        </div>
                                        <!--end::Image-->
                                        <!--begin::Title-->
                                        <div class="fs-5 fw-bold mb-2">{{ item.name }}</div>
                                        <!--end::Title-->
                                    </a>
                                    <!--end::Name-->
                                    <!--begin::Description-->
                                    <div class="fs-7 fw-semibold text-gray-400"> {{ item.quantity }} Cuentas</div>
                                    <!--end::Description-->
                                </div>
                                <!--end::Card body-->
                            </div>
                            <!--end::Card-->
                        </div>
                        {% endif %}                            
                        {% else %}
                            No hay registros para mostrar
                        {% endfor %}
                    </div>
                    <!--end:Row-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->

        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
</div>
{% endblock %}

{% block scripts %}
{% endblock %}