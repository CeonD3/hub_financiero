{% block styles %}
    <style>
    	.rowselected {
			font-weight: 700 !important;
			border-left: 3px solid #009ef7 !important;
		}
        .card-template:hover {
            transition: transform .2s;
            transform: scale(1.03);
            cursor: pointer;
        }


        .table-scroll {
			position: relative;
			width:100%;
			z-index: 1;
			margin: auto;
			overflow: auto;
			max-height: 490px;
		}
		.table-scroll table {
			width: 100%;
			margin: auto;
			border-collapse: separate;
			border-spacing: 0;
			margin-bottom: 0px;
		}
		.table-scroll th,
		.table-scroll td {
			vertical-align: middle;
		}
		.table-scroll thead th {
			background: #fff;
			position: -webkit-sticky;
			position: sticky;
			top: 0;
		}
    </style>
{% endblock %}

