{% extends "admin/layouts/main.twig" %}

{% block styles %}
    <style>
    	.rowselected {
			font-weight: 700 !important;
			border-left: 3px solid #009ef7 !important;
		}
        .card-template:hover {
            transition: transform .2s;
            transform: scale(1.03);
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block content %}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">GESTIÓN DE USUARIOS</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="/admin" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">Usuarios</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <!--begin::Primary button-->
                <!--end::Primary button-->
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="AppIndexUserAdmin" class="app-container container-fluid">
            <!--begin::Row-->
            <div class="row gx-5 gx-xl-10">
                <!--begin::Col-->
                <div class="col-sm-12 col-xl-12">
                    <!--begin::Chart widget 24-->
                    <div class="card card-bordered card-flush overflow-hidden h-xl-100">
                        <!--begin::Header-->
                        <div class="card-header py-5">
                            <!--begin::Title-->
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-dark">USUARIOS<span class="text-gray-400 mt-1 fw-semibold fs-6"></span>
                            </h3>
                            <!--end::Title-->
                            <!--begin::Toolbar-->
                            <div class="card-toolbar">
                                <div class="d-flex">
                                    {# <select class="form-select form-select-sm form-select-solid me-2" aria-label="Select example">
                                        <option hidden>Rechazar</option>
                                        <option value="1">Por contenido</option>
                                        <option value="2">Por diseño</option>
                                    </select> #}
                                    <button type="button" class="btn btn-sm btn-primary"  data-bs-toggle="modal" data-bs-target="#modalCreateUser">Nuevo Usuario</button>  
                                </div>
                            </div>
                            <!--end::Toolbar-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body pt-0">
                            <input type="search" class="form-control mb-3" placeholder="Buscar ..." @keyup="onSearchTable" @search="onSearchTable">
                            <div class="table-responsive">
                                <table class="table align-middle table-row-bordered border fs-6 gy-5 gs-7 table-hover" id="users-table-request">
                                    <thead>
                                        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                            <th>ID</th>
                                            <th>Usuario</th>
                                            <th>Correo</th>
                                            <th>Perfil</th>
                                            <th class="text-center min-w-100px">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-gray-600 fw-semibold">
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Chart widget 24-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
            <!-- begin:Modal -->
            <div class="modal fade" id="modalUpdateUser" tabindex="-1" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitleId">EDITAR USUARIO <span v-text="user.id"></span></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body pt-3">
                            <ul class="nav nav-tabs nav-line-tabs mb-8 fs-6">
                                <li class="nav-item">
                                    <a class="nav-link active" data-bs-toggle="tab" href="#kt_tab_pane_1">DATOS GENERALES</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_2">CORREO</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_3">CONTRASEÑA</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel">
                                    <form @submit="onUpdate" id="formUpdateUser">
                                        <input type="hidden" value="general" name="any">
                                        <div class="mb-3 row">
                                            <label class="col-4 col-form-label">Nombre</label>
                                            <div class="col-8">
                                                <input type="text" class="form-control form-control-solid" :value="user.names" name="name" placeholder="Nombre" required>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-4 col-form-label">Apellido</label>
                                            <div class="col-8">
                                                <input type="text" class="form-control form-control-solid" :value="user.lastnames" name="lastname" placeholder="Apellido">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-4 col-form-label">Perfil</label>
                                            <div class="col-8">
                                                <select class="form-control form-control-solid" :value="user.profile_id"  name="profileId" required>
                                                    <option hidden selected>SELECCIONE</option>
                                                    <option value="2">Master</option>
                                                    <option value="3">Administrador</option>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-lg-12 text-end mt-8">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary" form="formUpdateUser">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="kt_tab_pane_2" role="tabpanel">
                                    <form @submit="onUpdate" id="formUpdateUserEmail">
                                        <input type="hidden" value="email" name="any">
                                        <div class="mb-3 row">
                                            <label class="col-4 col-form-label">Correo</label>
                                            <div class="col-8">
                                                <input type="email" class="form-control form-control-solid" :value="user.email"  name="email" placeholder="Correo Electrónico" required>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-lg-12 text-end mt-8">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary" form="formUpdateUserEmail">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="kt_tab_pane_3" role="tabpanel">
                                    <form @submit="onUpdate" id="formUpdateUserPassword">
                                        <input type="hidden" value="password" name="any">
                                        <div class="mb-3 row">
                                            <label class="col-4 col-form-label">Contraseña</label>
                                            <div class="col-8">
                                                <input type="password" class="form-control form-control-solid"  name="password" placeholder="Contraseña" required>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-lg-12 text-end mt-8">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary" form="formUpdateUserPassword">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end:Modal -->
            <!-- begin:Modal -->
            <div class="modal fade" id="modalCreateUser" tabindex="-1" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitleId">NUEVO USUARIO</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <form @submit="onCreate" id="formCreateUser">
                                    <div class="mb-3 row">
                                        <label class="col-4 col-form-label">Nombre</label>
                                        <div class="col-8">
                                            <input type="text" class="form-control form-control-solid" name="name" placeholder="Nombre" required>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-4 col-form-label">Apellido</label>
                                        <div class="col-8">
                                            <input type="text" class="form-control form-control-solid" name="lastname" placeholder="Apellido">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-4 col-form-label">Correo</label>
                                        <div class="col-8">
                                            <input type="email" class="form-control form-control-solid" name="email" placeholder="Correo Electrónico" required>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-4 col-form-label">Contraseña</label>
                                        <div class="col-8">
                                            <input type="password" class="form-control form-control-solid" name="password" placeholder="******" minlength="3" required>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-4 col-form-label">Perfil</label>
                                        <div class="col-8">
                                            <select class="form-control form-control-solid" name="profileId" required>
                                                <option hidden selected>SELECCIONE</option>
                                                <option value="2">Master</option>
                                                <option value="3">Administrador</option>
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary" form="formCreateUser">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end:Modal -->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>

{% endblock %}

{% block scripts %}
    <script src="/assets/admin/js/user.js"></script>
{% endblock %}